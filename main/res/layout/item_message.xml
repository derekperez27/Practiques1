<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <!-- Este TextView mostrará el email del usuario -->
    <TextView
        android:id="@+id/messageUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usuario@ejemplo.com"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary" />

    <!-- Contenedor para el mensaje (texto o sticker) -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <!-- Este TextView mostrará el contenido del mensaje de texto -->
        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este es el cuerpo del mensaje."
            android:textSize="16sp"
            android:textColor="?android:textColorSecondary" />

        <!-- AÑADIDO: Este ImageView mostrará el sticker -->
        <ImageView
            android:id="@+id/stickerImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:visibility="gone" /> <!-- Importante: oculto por defecto -->

    </FrameLayout>

</LinearLayout>
