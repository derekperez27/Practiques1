<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 1. CheckBox para marcar la tarea como completada -->
        <CheckBox
            android:id="@+id/checkboxTasca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 2. Título de la tarea -->
        <TextView
            android:id="@+id/textViewTitolTasca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkboxTasca"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Títol de la tasca de prova" /> <!-- tools:text es texto de ejemplo -->

        <!-- 3. Descripción de la tarea -->
        <TextView
            android:id="@+id/textViewDescripcioTasca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/textViewTitolTasca"
            app:layout_constraintStart_toStartOf="@id/textViewTitolTasca"
            app:layout_constraintTop_toBottomOf="@id/textViewTitolTasca"
            tools:text="Aquesta és una descripció una mica més llarga per veure com queda." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
