<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TasquesActivity">

    <!-- 1. RecyclerView para mostrar la lista de tareas y notas -->
    <!-- Ocupará todo el espacio disponible. -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTasques"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_tasca" /> <!-- `tools:listitem` es para la vista previa -->

    <!-- 2. FloatingActionButton para añadir nuevas tareas -->
    <!-- Anclado a la esquina inferior derecha. -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAfegirTasca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Afegir nova tasca o nota"
        app:srcCompat="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- En activity_tasques.xml -->

    <ProgressBar
        android:id="@+id/tasksProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:ignore="MissingConstraints" /> <!-- 'gone' para que esté oculto al inicio -->

</androidx.constraintlayout.widget.ConstraintLayout>
